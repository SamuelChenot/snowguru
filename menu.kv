#File name: menu.kv

<MenuContainer>:
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'bottom'
		MenuBar:
			id: _menu_bar
			menu_container: root
			screen_manager: sm
			size_hint: 1, None
			height: 30
			
	AnchorLayout:
		anchor_x: 'left'
		anchor_y: 'top'
		MenuManager:
			id: sm
			menu_bar: _menu_bar
			size_hint: 1, None
			height: root.height - _menu_bar.height